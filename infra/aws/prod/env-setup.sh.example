#!/bin/bash
# Environment variables for Terraform - Local Development
# Copy this file to env-setup.sh and update with your actual values
# DO NOT commit env-setup.sh to git!

# VPC Configuration (replace with your actual values)
export TF_VAR_vpc_subnet_ids='["subnet-xxxxxxxxx","subnet-yyyyyyyyy"]'
export TF_VAR_vpc_security_group_ids='["sg-xxxxxxxxx"]'

# Optional: Override other variables if needed
# export TF_VAR_region="eu-west-1"
# export TF_VAR_instance_type="ml.g4dn.xlarge"

echo "Terraform environment variables set!"
echo "Usage: source env-setup.sh"